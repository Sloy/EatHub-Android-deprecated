<resources>

    <!-- Base application theme. -->
    <style name="EatHubTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/app_background</item>
        <item name="android:actionBarStyle">@style/ActionBar.EatHub</item>
        <item name="ingredientsViewStyle">@style/IngredientsView</item>
        <item name="ingredientsViewItemStyle">@style/recipe_ingredient_item</item>
        <item name="ingredientsViewSeparatorStyle">@style/recipe_ingredients_separator</item>
    </style>

    <style name="EatHubTheme.TranslucentActionbar">
        <item name="android:actionBarStyle">@style/ActionBar.EatHub.Transparent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ActionBar.EatHub" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/eathub_main_color</item>
        <item name="android:logo">@drawable/ab_logo</item>
        <item name="android:displayOptions">showHome|useLogo|homeAsUp|showTitle</item>
    </style>

    <style name="ActionBar.EatHub.Transparent">
        <item name="android:background">@android:color/transparent</item>
    </style>


    <!-- MenÃº drawer -->

    <style name="MenuDrawer"/>

    <style name="MenuDrawer.Widget"/>

    <style name="MenuDrawer.Widget.Category">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/drawer_text_category</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:background">@drawable/drawer_category_background</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MenuDrawer.Widget.Title">
        <!--<item name="android:background">@drawable/selectable_background_cocinillas</item>-->
        <item name="android:textAppearance">?android:attr/textAppearance</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MenuDrawer.Widget.TitleText">
        <item name="android:textColor">@color/drawer_text</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MenuDrawer.Widget.TitleText.Selected">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>


    <!-- Dashboard -->
    <style name="DashboardOverlayText">
        <item name="android:paddingLeft">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="DashboardItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dashboard_item_height</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <!--<item name="android:foreground">@drawable/selectable_background_cocinillas</item>-->
    </style>
    
    <!-- Receta -->
    
    <style name="IngredientsView">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/ingredients_background_solid</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="recipe_main_data">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/eathub_main_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="recipe_ingredient_item">
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="recipe_ingredients_separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/separator_size</item>
        <item name="android:background">@drawable/separator_recipe_ingredients</item>
        <item name="android:layerType">software</item>
    </style>

    <style name="recipe_steps_separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/separator_size</item>
        <item name="android:background">@color/separator</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="RecipeStepNumber">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/eathub_main_color</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="RecipeStepText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_toRightOf">@+id/item_recipe_step_number</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">@color/recipe_text</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textSize">17sp</item>
    </style>
</resources>
