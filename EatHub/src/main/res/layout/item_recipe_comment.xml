<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_recipe_comment_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:src="@drawable/piruletas_avatar"
        app:border_color="#FFFFFF"
        app:border_width="2dp"
        />

    <TextView
        android:id="@+id/item_recipe_comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/item_recipe_comment_avatar"
        android:text="Rafa Vázquez"
        android:textColor="@color/text_dark"
        android:textSize="16sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/item_recipe_comment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/item_recipe_comment_name"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/item_recipe_comment_name"
        android:fontFamily="sans-serif-light"
        android:text="06/05/11"
        android:textColor="@color/text_light"
        android:textSize="14sp"
        />


    <TextView
        android:id="@+id/item_recipe_comment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_recipe_comment_name"
        android:layout_toRightOf="@+id/item_recipe_comment_avatar"
        android:text="Creo que ya puedo pasarme a confirmarlo: ¡están riquísimas!
Aunque no han quedado demasiado perfectas (lo que tiene ser principiante) son completamente comestibles y están muy buenas."
        android:textColor="@color/recipe_text"
        />
</RelativeLayout>